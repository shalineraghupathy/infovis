{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Horizontal bar chart showing top drinks by caffeine content.",
  "data": {
    "url": "starbucks_processed.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "caffeine_mg",
      "type": "quantitative",
      "title": "Caffeine (mg)"
    },
    "y": {
      "field": "product_name",
      "type": "nominal",
      "sort": "-x",
      "title": "Drink"
    },
    "color": { "field": "size", "type": "nominal", "title": "Drink Size" },
    "tooltip": [
      { "field": "product_name", "type": "nominal", "title": "Drink" },
      {
        "field": "caffeine_mg",
        "type": "quantitative",
        "title": "Caffeine (mg)"
      },
      { "field": "size", "type": "nominal", "title": "Size" }
    ]
  }
}
